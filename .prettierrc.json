{
  "singleQuote": true,
  "jsxSingleQuote": true,
  "semi": false,
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "ignore",
  "endOfLine": "auto",
  "trailingComma": "all",
  "tabWidth": 2,

  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "typescript": {
          "toolTip": "ignore",
          "pragma": "off",
          "useJSXTextNode": "off",
          "alwaysUseParentheses": true,
          "project": "./tsconfig.json",
          "locale": "zh-CN"
        }
      }
    }
  ]
}
